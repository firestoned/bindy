# RNDC client configuration for bindy operator
# This file is used by the 'rndc' command-line tool to connect to BIND9
# Key file is mounted from Secret at /etc/bind/keys/rndc.key

include "/etc/bind/keys/rndc.key";

# Default options for RNDC client
# Using 127.0.0.1 to connect to local BIND9 instance within the same pod
options {
    default-server 127.0.0.1;
    default-port 9530;
    default-key "bindy-operator";
};

# Server configuration - connects to BIND9 on localhost within the pod
server 127.0.0.1 {
    key "bindy-operator";
    port 9530;
};
