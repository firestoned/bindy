// BIND9 Configuration - Auto-generated by bindy

include "/etc/bind/named.conf.options";
{{ZONES_INCLUDE}}

// Include RNDC key files mounted from Secrets
{{RNDC_KEY_INCLUDES}}

// RNDC Controls - listen on localhost only (API sidecar handles external access)
controls {
    inet 127.0.0.1 port 9530 allow { localhost; } keys { {{RNDC_KEY_NAMES}}; };
};

logging {
    channel default_stderr {
        stderr;
        severity info;
        print-time iso8601;
        print-category yes;
        print-severity yes;
    };

    channel queries_stderr {
        stderr;
        severity info;
        print-time iso8601;
        print-category yes;
        print-severity yes;
    };

    channel security_stderr {
        stderr;
        severity warning;
        print-time iso8601;
        print-category yes;
        print-severity yes;
    };

    category default { default_stderr; };
    category general { default_stderr; };
    category config { default_stderr; };
    category network { default_stderr; };
    category queries { queries_stderr; };
    category security { security_stderr; };
    category dnssec { security_stderr; };
    category xfer-in { default_stderr; };
    category xfer-out { default_stderr; };
    category notify { default_stderr; };
    category update { default_stderr; };
    category update-security { security_stderr; };
};
